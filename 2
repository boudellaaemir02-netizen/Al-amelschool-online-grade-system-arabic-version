<body>

<div class="title-bar">Al-Amel School | نظام الدرجات</div>

<!-- LOGIN PAGE -->
<div class="card" id="loginPage">
    <h2>تسجيل الدخول</h2>

    <label>الدور:</label>
    <select id="role">
        <option value="parent">ولي الأمر</option>
        <option value="teacher">المعلم</option>
    </select>

    <label>اسم المستخدم:</label>
    <input type="text" id="username">

    <label>كلمة المرور:</label>
    <input type="password" id="password">
    
    <button onclick="login()">دخول</button>
</div>

<!-- PARENT DASHBOARD -->
<div class="card hidden" id="parentDashboard">
    <h2>مرحبا بكم</h2>
    <h3 id="studentName"></h3>

    <h3>الدرجات:</h3>
    <div id="gradesBox"></div>

    <h3>الحضور:</h3>
    <p id="attendanceStatus"></p>

    <h3>ملاحظة المعلم:</h3>
    <div id="parentNote" class="note-box"></div>

    <button onclick="logout()">تسجيل الخروج</button>
</div>

<!-- TEACHER DASHBOARD -->
<div class="card hidden" id="teacherDashboard">
    <h2>لوحة تحكم المعلم</h2>
    <h3 id="tClass"></h3>

    <h3>تحرير درجات الطالب</h3>
    <div id="tGrades"></div>

    <h3>تحديد الحضور</h3>
    <select id="attendance">
        <option value="حاضر">حاضر</option>
        <option value="غائب">غائب</option>
    </select>

    <h3>كتابة ملاحظة:</h3>
    <textarea id="teacherNote" rows="3"></textarea>

    <button onclick="saveChanges()">حفظ</button>
    <button onclick="logout()">تسجيل الخروج</button>
</div>

<script>
/* ---------------------------
     DATABASE (STATIC OBJECT)
----------------------------*/
const DB = {
    parent: {
        username: "hadz",
        password: "1234",
        student: "Fatma Boudella"
    },
    teacher: {
        username: "lilas",
        password: "abcd",
        class: "الصف الأول"
    },
    studentData: {
        name: "Fatma Boudella",
        grades: {
            "رياضيات": 95,
            "لغة عربية": 90,
            "لغة إنجليزية": 100,
            "علوم": 88,
            "تاريخ": 92,
            "جغرافيا": 85,
            "قرآن": 100,
            "حديث": 97
        },
        attendance: "حاضر",
        note: ""
    }
};

/* ---------------------------
           LOGIN
----------------------------*/
function login() {
    let role = document.getElementById("role").value;
    let user = document.getElementById("username").value.trim();
    let pass = document.getElementById("password").value.trim();

    if (role === "parent") {
        if (user === DB.parent.username && pass === DB.parent.password) {
            showParent();
        } else alert("بيانات غير صحيحة!");
    }

    if (role === "teacher") {
        if (user === DB.teacher.username && pass === DB.teacher.password) {
            showTeacher();
        } else alert("بيانات غير صحيحة!");
    }
}

/* ---------------------------
      SHOW PARENT PAGE
----------------------------*/
function showParent() {
    document.getElementById("loginPage").classList.add("hidden");
    document.getElementById("parentDashboard").classList.remove("hidden");

    document.getElementById("studentName").innerText =
        "Student: " + DB.studentData.name;

    let box = document.getElementById("gradesBox");
    box.innerHTML = "";
    for (let subject in DB.studentData.grades) {
        box.innerHTML += `<div class="box">${subject}: ${DB.studentData.grades[subject]}</div>`;
    }

    document.getElementById("attendanceStatus").innerText =
        DB.studentData.attendance;

    document.getElementById("parentNote").innerText =
        DB.studentData.note || "لا توجد ملاحظات.";
}

/* ---------------------------
      SHOW TEACHER PAGE
----------------------------*/
function showTeacher() {
    document.getElementById("loginPage").classList.add("hidden");
    document.getElementById("teacherDashboard").classList.remove("hidden");

    document.getElementById("tClass").innerText =
        "الفصل: " + DB.teacher.class;

    let box = document.getElementById("tGrades");
    box.innerHTML = "";

    for (let subject in DB.studentData.grades) {
        box.innerHTML += `
        <div class="box">
            ${subject}:
            <input type="number" min="1" max="100" id="g_${subject}" value="${DB.studentData.grades[subject]}">
        </div>`;
    }

    document.getElementById("attendance").value = DB.studentData.attendance;
    document.getElementById("teacherNote").value = DB.studentData.note;
}

/* ---------------------------
       SAVE CHANGES
----------------------------*/
function saveChanges() {
    // Save grades
    for (let subject in DB.studentData.grades) {
        let newVal = document.getElementById("g_" + subject).value;
        DB.studentData.grades[subject] = Number(newVal);
    }

    // Save attendance
    DB.studentData.attendance = document.getElementById("attendance").value;

    // Save note
    DB.studentData.note = document.getElementById("teacherNote").value;

    alert("تم الحفظ بنجاح!");
}

/* ---------------------------
          LOGOUT
----------------------------*/
function logout() {
    location.reload();
}

</script>

</body>
</html>
